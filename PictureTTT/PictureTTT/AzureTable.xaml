<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PictureTTT.AzureTable" Title="AzureTable">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand">

            <StackLayout Orientation="Vertical" Margin="20">

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button Text="Camera" Clicked="loadCamera" />
                    <Button Text="Upload" Clicked="uploadImage" />
                </StackLayout>

                <ActivityIndicator x:Name="uploadingBusy" IsRunning="false" />
                <Label x:Name="jsonResponse" />
                <Image x:Name="image" Aspect="AspectFit" />

            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>